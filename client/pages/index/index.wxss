/* 移动菜单 */

.menu {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50%;
  text-align: center;
  background-color: rgba(26, 43, 49, .7);
  color: skyblue;
  position: relative;
  z-index: 999;
}

.menu view {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  font-size: 22rpx;
  line-height: 90rpx;
  position: absolute;
  opacity: 0;
}

.menu .changeInfo {
  top: -100rpx;
  background-color: rgba(26, 43, 49, .7);
  animation: fateIn .5s ease-out forwards;
}

.menu .deleteArch {
  background-color: rgba(26, 43, 49, .7);
  right: -80rpx;
  top: -50rpx;
  animation: fateIn .5s ease-out 0.2s forwards;
}

.menu .my {
  background-color: rgba(26, 43, 49, .7);
  top: 50rpx;
  right: -90rpx;
  animation: fateIn .5s ease-out .4s forwards;
}

/* 动画 */

/* 监控动画 */

@keyframes wave {
  50%, 70% {
    transform: translateY(-50%) scale(2.5);
  }
  80%, 100% {
    opacity: 0;
  }
}

/* 菜单动画 */

@keyframes fateIn {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}