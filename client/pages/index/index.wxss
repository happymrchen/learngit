/* pages/index/index.wxss */

/* 最外层容器 */

.moveArea {
  height: 100vh;
  width: 100vw;
}

.container {
  position: absolute;
  width: 100%;
  top: 0;
}

.arch_box {
  margin: 0 auto;
}

.arch_item {
  width: 70vw;
  height: 100rpx;
  margin: 10rpx auto;
  display: flex;
  font-size: 40rpx;
  text-align: center;
  line-height: 100rpx;
}

.arch_item .arch_detail {
  width: 60%;
  background-color: #90d3ee;
  margin: 0 auto;
  border-radius: 20rpx;
}

.arch_item .status {
  position: relative;
}

.arch_item .status_right::before {
  content: "";
  display: block;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  right: -50rpx;
  transform: translateY(-50%);
  background-color: rgb(7, 82, 15);
}

.arch_item .status_right::after {
  content: "";
  display: block;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  right: -50rpx;
  transform: translateY(-50%);
  background-color: rgb(7, 82, 15);
  animation: wave 2s ease-out infinite;
}

/* 新增大棚 */

.add_arch {
  position: fixed;
  bottom: 10rpx;
  left: 50%;
  transform: translateX(-50%);
}

.add_arch button {
  background-color: rgb(132, 216, 121);
}

/* 添加大棚的modal */

.mask {
  position: absolute;
  height: 100vh;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, .1);
  border-radius: 5rpx;
  z-index: 999;
}

.modal_content {
  display: flex;
  flex-direction: column;
  width: 90%;
  height: 100%;
  background-color: #fff;
  border-radius: 10rpx;
  margin-top: 10vh;
}

.modal_btn_wrapper {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  line-height: 80rpx;
  border-top: 2rpx solid rgba(7, 17, 27, 0.1);
  padding-bottom: 40rpx;
}

.cancel_btn, .confirm_btn {
  flex: 1;
  height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  border: 1px solid #ccc;
  margin: 5rpx;
  border-radius: 20rpx;
}

.cancel_btn {
  border-right: 2rpx solid rgba(7, 17, 27, 0.1);
}

.main_content {
  flex: 1;
  font-size: 30rpx;
}

.input_id {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
}

.input_id text {
  flex: 2;
  text-align: center;
}

.input_id input {
  flex: 5;
}

.input_item {
  display: flex;
  padding-top: 20rpx;
  border-bottom: 1px solid #ccc;
}

.input_item view {
  flex: 1;
  text-align: center;
}

.error {
  border: 1px solid rgb(212, 114, 114);
}

