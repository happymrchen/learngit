<!--pages/login/login.wxml-->
<view class="login_container">
  <view class="login_view">
    <text class="login_lable">账号：</text>
    <input class="login_user" placeholder="请输入账号" bindinput="usernameInput"></input>
  </view>

  <view class="login_view">
    <text class="login_lable">密码：</text>
    <input class="login_pwd" placeholder="请输入密码" password="true" bindinput="passwordInput"></input>
  </view>

  <view>
    <button class="login_button" bindtap="onMyLogin">登录</button>
  </view>
</view>
