/* pages/my/my.wxss */

page {
    background-color: #edece8;
}

.user_info_wrap {
    height: 45vh;
    position: relative;
    background-color: skyblue;
}

.user_info_wrap .user_img_wrap {
    position: relative;
}

.user_info_wrap .user_img_wrap .user_bg {
    height: 45vh;
    filter: blur(10rpx);
}

.user_info_wrap .user_img_wrap .user_info {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 20%;
    text-align: center;
}

.user_info_wrap .user_img_wrap .user_info .user_icon {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    background-color: green;
    opacity: 0.5;
}

.user_info_wrap .user_img_wrap .user_info .user_name {
    color: #333;
    margin-top: 40rpx;
}

/* 应用相关 */

.user_content .user_main .app_info_wrap {
    margin-top: 30rpx;
    background-color: #fff;
}

.user_content .user_main .app_info_wrap .app_info_item {
    padding: 20rpx;
    border-bottom: 1rpx solid #ccc;
}

.user_content .user_main .app_info_wrap .app_info_concat {
    display: flex;
    justify-content: space-between;
}

.user_content .user_main .recommend_wrap {
    margin-top: 30rpx;
    background-color: #fff;
    padding: 20rpx;
}

/* 设置 */

.user_content .user_main .setting {
    margin-top: 30rpx;
    background-color: #fff;
    padding: 20rpx;
}

/* 退出*/

.logout {
    background-color: #fff;
}